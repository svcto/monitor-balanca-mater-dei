                        <TextBox HorizontalAlignment="Left" Margin="10,120,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="58"/>
                        <TextBox HorizontalAlignment="Left" Margin="68,120,0,0" TextWrapping="Wrap" Text="cm" VerticalAlignment="Top" Width="31" Background="Silver" TextAlignment="Center"/>
                        <TextBox HorizontalAlignment="Left" Margin="116,120,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="58"/>
                        <TextBox HorizontalAlignment="Left" Margin="179,120,0,0" TextWrapping="Wrap" Text="cm" VerticalAlignment="Top" Width="31" Background="Silver" TextAlignment="Center"/>
                        <TextBox HorizontalAlignment="Left" Margin="228,120,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="58"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
